{
    "name": "andrewdalpino/epicuros",
    "description": "A tool that provides JWT authentication and secure context sharing between microservices.",
    "license": "MIT",
    "keywords": ["authentication", "api", "jwt", "token", "context", "microservices"],
    "authors": [
        {
            "name": "Andrew DalPino",
            "email": "me@andrewdalpino.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "firebase/php-jwt": "^4.0",
        "ramsey/uuid": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.0.*"
    },
    "autoload": {
        "psr-4": {
            "AndrewDalpino\\Epicuros\\": "src/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
